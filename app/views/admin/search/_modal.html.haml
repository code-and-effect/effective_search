%div#admin-search-modal.modal.fade{tabindex: '-1', role: 'dialog', 'aria-labelledby': 'adminSearchModalLabel', 'aria-hidden': 'true', data: { turbolinks: 'permanent' }}
  .modal-dialog.modal-lg{role: 'document'}
    .modal-content
      .modal-header.border-bottom-0.pb-2
        %h5#adminSearchModalLabel.modal-title
          %i.fas.fa-search.mr-2
          Admin Search
        %button.close{type: 'button', data: { dismiss: 'modal' }, 'aria-label': 'Close'}
          %span{'aria-hidden': 'true'} &times;

      .modal-body.pt-2
        %form.admin-search-form
          .form-group.mb-3
            %input.form-control.form-control-lg{type: 'text', placeholder: 'Search for users, memberships, orders, events...', autofocus: true, autocomplete: 'off'}
            %small.form-text.text-muted
              Start typing to search across all admin resources

          .admin-search-results
            -# Search results will be populated here
            .text-center.text-muted.py-5
              %i.fas.fa-search.fa-3x.mb-3.opacity-25
              %p.mb-0 Enter a search term to get started

      .modal-footer.border-top-0.pt-0
        %button.btn.btn-sm.btn-secondary{type: 'button', data: { dismiss: 'modal' }} Close
