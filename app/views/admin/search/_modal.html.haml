    .modal-content
      .modal-header.border-bottom-0
        %h5#adminSearchModalLabel.modal-title
          = icon('search')
          Search
        %button.close{type: 'button', data: { dismiss: 'modal' }, 'aria-label': 'Close'}
          %span{'aria-hidden': 'true'} &times;

      .modal-body
        /- datatable = Admin::EffectiveSearchDatatable.new
        /= render_datatable(datatable, buttons: false, entries: false, sort: false)

        %iframe{data: { src: effective_search.admin_search_path }, style: 'width: 100%; height: 70vh; border: none; overflow: hidden;', name: 'admin-search-frame'}

